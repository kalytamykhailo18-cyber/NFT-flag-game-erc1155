# ============================================
# Municipal Place NFT - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# Node Environment
# ============================================
NODE_ENV=production  # Options: development, production

# ============================================
# Database Configuration
# ============================================
DB_NAME=place_nft_1155
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=postgres  # Use 'postgres' for Docker, 'localhost' for local development
DB_PORT=5432

# ============================================
# Server Ports
# ============================================
BACKEND_PORT=3000
FRONTEND_PORT=5173

# ============================================
# Blockchain Configuration
# ============================================
# Deployed contract address
CONTRACT_ADDRESS=0x311202EA7C787AbB6f91CB6154B1572c23D353e3

# Admin wallet private key (WITHOUT 0x prefix)
ADMIN_PRIVATE_KEY=your_private_key_here

# Network settings
CHAIN_ID=80002
BLOCKCHAIN_PROVIDER_URL=https://rpc-amoy.polygon.technology

# ============================================
# IPFS Configuration
# ============================================
# Option 1: Use local IPFS node (requires --profile with-ipfs)
IPFS_API_URL=http://ipfs:5001

# Option 2: Use Pinata (recommended for production)
# IPFS_API_URL=https://api.pinata.cloud
IPFS_GATEWAY_URL=https://gateway.pinata.cloud/ipfs
PINATA_JWT=your_pinata_jwt_here
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_KEY=your_pinata_secret_key_here

# IPFS ports (only needed if using local IPFS)
IPFS_API_PORT=5001
IPFS_GATEWAY_PORT=8080

# ============================================
# External APIs (for scripts)
# ============================================
# SerpAPI for Google Images search (optional - for updatePlaceImages script)
SERP_API_KEY=your_serp_api_key_here

# ============================================
# Admin API Configuration
# ============================================
ADMIN_API_KEY=your-secret-admin-key-change-this

# ============================================
# Database Seeders (Optional)
# ============================================
# Set to 'true' to run seeders on container start (development only)
RUN_SEEDERS=false

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGIN=http://localhost:5173

# ============================================
# Frontend Configuration (Vite)
# ============================================
VITE_API_URL=http://localhost:3000/api
VITE_CONTRACT_ADDRESS=0x311202EA7C787AbB6f91CB6154B1572c23D353e3
VITE_CHAIN_ID=80002
VITE_CHAIN_NAME=Polygon Amoy Testnet
VITE_RPC_URL=https://rpc-amoy.polygon.technology
VITE_BLOCK_EXPLORER=https://amoy.polygonscan.com
VITE_IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs
